service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write;
    }
    function estaLogado() {
      return request.auth.uid != null;
    }
    function eAdm() {
      return estaLogado() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true
    }
    function eDono() {
      return request.auth.uid == resource.data.author_id;
    }
    match /musicas/{musica} {
      allow update, delete: if eDono();
      allow create, get: if estaLogado();
      allow read: if eAdm();
    }
    match /cartuchos/{cartucho} {
      allow read: if estaLogado();
      allow write: if eAdm();
    }
    match /users/{user} {
      allow get: if estaLogado();
      allow write: if eAdm() || eDono();
      allow read: if eAdm();
    }
    match /playlists/{playlist} {
      allow create, read: if estaLogado();
      allow update, delete: if eDono();
    }
  }
}